<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/coinImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/litecoin"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:paddingRight="4dp"/>

            <TextView
                android:id="@+id/coinPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="52sp" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <SeekBar
            android:id="@+id/coinBuySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="@color/colorSecondary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/transactionMinValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/transactionMaxValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/coinBuyEnterValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Cash Amount"
            android:backgroundTint="@color/colorSecondary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coinBuyAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:text="Coin Amount:"/>

            <TextView
                android:id="@+id/coinBuyAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coinBuyTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:text="Total Value:"/>

            <TextView
                android:id="@+id/coinBuyTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@color/colorNeutralLight">
        <TextView
            android:id="@+id/coinBuyCancel"
            android:layout_width="159dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="32sp"
            android:textColor="@color/colorNeutralLight"
            android:textStyle="bold"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/coinBuyBuy"
            android:layout_width="159dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Buy"
            android:textSize="32sp"
            android:textColor="@color/colorNeutralLight"
            android:textStyle="bold"
            android:textAllCaps="true"/>
    </RelativeLayout>


</LinearLayout>





